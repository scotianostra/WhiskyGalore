@model WhiskyGalore.Models.User
@{
    ViewBag.Title = "Register";
}

<div class="col-md-4"></div>

<div class="register_account col-md-4 centre-div ">
    
        <h4 class="title text-center">Create an Account</h4>

        @using (Html.BeginForm("NewUser", "Register", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.username, new { @class = "control-label" })
                @Html.EditorFor(model => model.username, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.password, new { @class = "control-label" })
                @Html.EditorFor(model => model.password, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.accountType, new { @class = "control-label" })
                @Html.EnumDropDownListFor(model => model.accountType)
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        }
    </div>



